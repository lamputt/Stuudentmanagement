@model StudentManagement.Models.Departments

@{
    ViewData["Title"] = "Details Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Department Details</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Departments</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3 font-weight-bold">Name:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Name)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Leader:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Leader)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Begining Date:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Begining_date)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Status:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.StatusText)</div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-sm-12">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Edit</a>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
