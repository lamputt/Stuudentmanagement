@model StudentManagement.Models.Groups

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Delete Group</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Groups</a></li>
                        <li class="breadcrumb-item active">Delete</li>
                    </ol>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3>Are you sure you want to delete this group?</h3>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Group Name:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Name)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Student Number:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Student_number)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Status:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.StatusText)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Department:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Departments.Name)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Term:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Terms.Name)</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-3 font-weight-bold">Teacher:</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Accounts.Users.Full_name)</div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-sm-12">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
